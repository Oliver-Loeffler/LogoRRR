<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>app.logorrr.dist</groupId>
        <artifactId>dist-win</artifactId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>binary-win</artifactId>
    <name>app.logorrr.dist.win.binary</name>

    <properties>
        <graalvm.home>C:\Program Files\Java\graalvm-ce-java11-21.1.0</graalvm.home>
        <graalvm.log>${project.build.directory}\graal.log</graalvm.log>
    </properties>

    <dependencies>
        <dependency>
            <groupId>app.logorrr</groupId>
            <artifactId>app</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- has to be defined to copy meta inf json files for native-image to proper place (see plugin management) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.gluonhq</groupId>
                <artifactId>gluonfx-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download-upx-packer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://github.com/upx/upx/releases/download/v3.96/upx-3.96-win64.zip</url>
                            <unpack>true</unpack>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>pack-exe</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${project.build.directory}/client/x86_64-windows/
                            </workingDirectory>
                            <executable>${project.build.directory}/upx-3.96-win64/upx.exe</executable>
                            <arguments>
                                <argument>-9</argument>
                                <argument>-ologorrr.exe</argument>
                                <argument>${project.name}.exe</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>