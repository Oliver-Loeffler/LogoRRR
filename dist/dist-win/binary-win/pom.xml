<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>app.logorrr.dist</groupId>
        <artifactId>dist-win</artifactId>
        <version>${revision}${changelist}</version>
    </parent>

    <artifactId>binary-win</artifactId>
    <name>app.logorrr.dist.win.binary</name>

    <properties>
        <graalvm.home>C:\Program Files\Java\graalvm-ce-java11-21.1.0</graalvm.home>
        <graalvm.log>${project.build.directory}\graal.log</graalvm.log>
    </properties>

    <dependencies>
        <dependency>
            <groupId>app.logorrr.dist</groupId>
            <artifactId>binary-win-uncompressed</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>download-upx-packer</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://github.com/upx/upx/releases/download/v3.96/upx-3.96-win64.zip</url>
                            <unpack>true</unpack>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-binary</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>binary-win-uncompressed</includeArtifactIds>
                            <outputDirectory>${project.build.directory}/installer/certificate/</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>pack-exe</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${project.build.directory}/</workingDirectory>
                            <executable>${project.build.directory}/upx-3.96-win64/upx.exe</executable>
                            <arguments>
                                <argument>-9</argument>
                                <argument>-ologorrr.exe</argument>
                                <argument>${project.name}.exe</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>